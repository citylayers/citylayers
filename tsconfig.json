{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "ES2021",
    "moduleResolution": "node",
    "sourceMap": true,
    "types": ["node"],
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": ".",
    "baseUrl": ".",
  },
  "lib": ["es2015"],
  "include": ["src/server/src/*", "dist/app.js"],
  "exclude": ["client", "node_modules", "public"]
}
